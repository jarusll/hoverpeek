{
  "description": "Shows a preview of a link in iframe",
  "manifest_version": 2,
  "name": "HoverPeek",
  "version": "1.0",
  "homepage_url": "https://github.com/jarusll/preview.git",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "peek.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/border-48.png"
    },
    "default_title": "HoverPeek",
    "default_popup": "popup.html"
  }
}
