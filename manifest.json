{
  "description": "Shows a preview of a link in iframe",
  "manifest_version": 2,
  "name": "preview",
  "version": "1.0",
  "homepage_url": "https://github.com/jarusll/preview.git",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "preview.js"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "runtime",
    "window"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  }
}
